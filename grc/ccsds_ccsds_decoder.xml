<?xml version="1.0"?>
<block>
  <name>CCSDS Decoder</name>
  <key>ccsds_ccsds_decoder</key>
  <category>ccsds</category>
  <import>import ccsds</import>
  <make>ccsds.ccsds_decoder($threshold, $rs_decode, $deinterleave, $descramble, $verbose, $printing, $n_deinterleave)</make>
  <param>
    <name>Threshold</name>
    <key>threshold</key>
    <value>0</value>
    <type>int</type>
  </param>
  <param>
    <name>RS Decode</name>
    <key>rs_decode</key>
    <value>True</value>
    <type>enum</type>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Deinterleave</name>
    <key>deinterleave</key>
    <value>True</value>
    <type>enum</type>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Descramble</name>
    <key>descramble</key>
    <value>True</value>
    <type>enum</type>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Print packets</name>
    <key>printing</key>
    <value>False</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Verbose</name>
    <key>verbose</key>
    <value>False</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Deinterleave Count</name>
    <key>n_deinterleave</key>
    <value>5</value>
    <type>int</type>
  </param>
  <check>($n_deinterleave &gt; 0) and ($n_deinterleave &lt; 9)</check>
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>
  <source>
    <name>out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
